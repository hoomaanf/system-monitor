{
  "name": "system_monitor",
  "version": "1.0.0",
  "description": "A Linux system monitor app built with Nuxt + Electron",
  "author": "HOOMAAN <hoomaanfelfeli@gmail.com>",
  "private": true,
  "main": "electron-main.js",
  "scripts": {
    "build": "nuxt generate",
    "dev": "nuxt dev",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:start": "electron .",
    "dist": "electron-builder --linux"
  },
  "dependencies": {
    "nuxt": "^4.2.2",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "electron": "39.2.7",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.hoomaan.systemmonitor",
    "productName": "System Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      {
        "from": ".output/public",
        "to": ".output/public"
      },
      {
        "from": "public",
        "to": "public"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "public/icon.png"
    }
  }
}
